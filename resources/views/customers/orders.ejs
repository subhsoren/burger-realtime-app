<section class="orders light-section">
  <div class="container mx-auto pt-12 px-4">
    <h1 class="font-bold text-lg mb-4">All orders</h1>
    <% if(messages.success){ %>
        <div
      id="success-alert"
      class="
        flex
        items-center
        bg-green-500
        text-white
        tex-sm
        font-bold
        px-4
        py-3
      "
      role="alert"
    >
      <p><%=messages.success%></p>
    </div>

    <% } %>
  
    <table class="w-full table-auto bg-white">
      <thead>
        <tr>
          <th class="px-4 py-2 text-left">Orders</th>
          <th class="px-4 py-2 text-left">Phone Number</th>
          <th class="px-4 py-2 text-left">Address</th>
          <th class="px-4 py-2 text-left">Time</th>
        </tr>
      </thead>
      <tbody>
        <%if(orders){ %>
          <% orders.forEach((order)=> { %>
                 <tr>
          <td class="border px-4 py-2">
            <a href="/" class="link"><%=order._id%></a>
          </td>
          <td class="border px-4 py-2"><%=order.phone%></td>
          <td class="border px-4 py-2"><%=order.address%></td>
          
          <td class="border px-4 py-2"><%=moment(order.createdAt).format('Do MMMM YYYY, hh:mm A')%></td>
        </tr>

         <% }) %>

        
     
   
        <%} else { %>

     
        <tr>
          <td class="p-4"><span>No Orders Found! </span></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>
